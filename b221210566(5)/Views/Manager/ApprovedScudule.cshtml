@model List<AppointmentEmployee>
<head>
    <link href="@Url.Content("~/css/Scudule.css")" rel="stylesheet" type="text/css" />
</head>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Appointment No
                </th>
                <th>
                    Appointment Date
                </th>
                <th>
                    Appointment Time
                </th>
                <th>
                    Department
                </th>
                <th>
                    Employee Name
                </th>
                <th>
                    Period
                </th>
                <th>
                    Approved
                </th>


            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Appointment.AppNo</td>
                    <td>@Model[i].Appointment.Date</td>
                    <td>@Model[i].Appointment.Time</td>
                    <td>@Model[i].Employee.DepEmployees.Department.Name</td>
                    <td>@Model[i].Employee.FirstName @Model[i].Employee.LastName</td>
                    <td>@Model[i].Appointment.Approved</td>
                    <td>
                        <input type="hidden" name="appointments[@i].AppNo" value="@Model[i].Appointment.AppNo" />
                        <input type="checkbox" name="appointments[@i].Approved" value="true" @(Model[i].Appointment.Approved ? "checked" : "") />
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
<div class=" approvalS">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>
